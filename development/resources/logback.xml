<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level %logger{5}/%M - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="org.apache.http" level="WARN" />
    
    <root level="DEBUG">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
