<configuration>
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>cmr-playback.log</file>
        <encoder>
            <pattern>%date %-5level [%thread] %logger{36}/%M - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="org.apache.http" level="WARN" />

    <root level="DEBUG">
        <appender-ref ref="FILE" />
    </root>
</configuration>
