#kaocha/v1
{:tests [{:id :unit
          :test-paths ["test/unit"]}

         {:id :features
          :type :kaocha.type/cucumber
          :test-paths ["test/features"]
          :cucumber/glue-paths ["test/steps_definitions"]}]

 :plugins #profile {:default [:kaocha.plugin.alpha/info
                              :kaocha.plugin/cloverage
                              :kaocha.plugin/randomize
                              :capture-output
                              :print-invocations
                              :profiling]

                    :cucumber [:kaocha.plugin.alpha/info
                               :kaocha.plugin/randomize
                               :capture-output
                               :print-invocations
                               :profiling]}

 :color? #profile {:default true :ci false}

 :fail-fast? false

 :reporter #profile {:default kaocha.report/dots
                     :cucumber kaocha.report/documentation
                     :ci kaocha.report/documentation}

 :kaocha.plugin.profiling/profiling? #profile {:default true :ci false}
 :kaocha.plugin.profiling/count 3

 :kaocha.plugin.randomize/randomize? true

 :cloverage/opts
 {:summary? false
  :html? #profile {:default true :ci false}
  :codecov? #profile {:default false :ci true}}}
